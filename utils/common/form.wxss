page {
  background-color: #fff;
}
.container {
  display: block;
  padding: 0 18px;
}
.container .title {
  padding: 100rpx 0;
}
.container .title .logo {
  width: 100%;
}
.container .content {
  margin-top: -15px;
}
.container .item {
  display: flex;
  display: -webkit-flex;
  padding: 10px 15px;
  border: 1px solid #e8e8e8;
  margin: 12px 0;
}
.container .item .label {
  height: 27px;
  margin-right: 12px;
}
.container .item .label .icon {
  width: 24px;
  height: 27px;
}
.container .item .label .tag {
  margin-right: 5px;
  color: #ff2200;
  line-height: 14px;
}
.container .item .input-wrap {
  flex: 1;
  -webkit-flex: 1;
  height: 27px;
}
.container .item.code {
  position: relative;
  margin-right: 130px;
}
.container .item.code .input {
  flex: 1;
  -webkit-flex: 1;
  margin-right: 15px;
}
.container .item.code .button {
  position: absolute;
  right: -130px;
  top: 0;
  width: 115px;
  height: 47px;
  line-height: 47px;
  background-color: #724d93;
  border-radius: 5px;
  text-align: center;
  color: #fff;
}
.container .item.code .button.disabled {
  background-color: #ddd;
}
.container .item .input {
  width: 100%;
  height: 27px;
  font-size: 14px;
  box-sizing: border-box;
  border-radius: 5px;
}
.btn-primary.btn {
  margin-top: 30px;
  margin-bottom: 20px;
}
.input-placeholder {
  color: #999;
}
.btn-primary.disabled {
  background-color: #ddd;
}